<div id="user_nav"> 
  <div id="current_user">
    <%= current_user.name %>
  </div>
  <ul class="nav nav-tabs nav-stacked">
    <li class=<%= active?(downloads_path) %> >
      <%= link_to 'Download Files', downloads_path %>
    </li>
    <li class=<%= active?(user_path(current_user)) %> >
      <%= link_to 'Upload Files', current_user %>
    </li>
    <% if allow? 'users', 'index', current_user %>
       <li class=<%= active?(users_path) %>>
         <%= link_to "User List", users_path %>
       </li>
     <% end %>
    <% if allow? "users", "edit", current_user %>
      <li class=<%= active?(edit_user_path(current_user)) %>>
        <%= link_to "My Account", edit_user_path(current_user) %>
      </li>
    <% end %> 
    <li>
      <%= link_to 'Log Out', logout_path %>
    </li>
  </ul>
</div>
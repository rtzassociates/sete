<div id="nothing_to_show" class="upload collection">
  <h3>Nothing to show</h3>
  <p class="muted">
    <% if user == current_user %>
      <%= current_user.uploads.any? ? "No results found." : "You haven't uploaded any files yet." %>
    <% else %>
      <%= current_user.allowed_uploads.any? ? "No results found." : "Once a user shares a file with you it will appear on this page for you to download." %>
    <% end %>
  </p>
</div>

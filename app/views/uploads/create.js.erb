<% if @upload.new_record? %>
  alert("Failed to upload file: <%= j @upload.errors.full_messages.join(', ').html_safe %>");
<% else %>
  $("#uploads").prepend("<%= j render partial: 'uploads/upload', locals: { upload: @upload, user: @user }  %>");
  $('.alert-notice').hide()
  $('#flash').html('<div class="alert alert-notice">File uploaded successfully</div>')
  $('#nothing_to_show').hide()
  $('#allowed_users').replaceWith("<%= j render partial: 'allowed_users' %>")
<% end %>
